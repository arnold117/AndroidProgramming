<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 设置填充的颜色 -->
    <solid android:color="#1FBAF3" />
    <!-- 设置4个角的弧形半径 -->
    <corners android:radius="5dp" />
    <!-- 设置文字与按钮边界的间隔 -->
    <padding
        android:bottom="10dp"
        android:left="15dp"
        android:right="15dp"
        android:top="10dp" />
</shape>
